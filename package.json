{
  "name": "api-docker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --exit-child --transpile-only --ignore-watch node_modules --respawn src/app.ts",
    "docker:image": "docker build -t api-docker-image .",
    "docker:container": "docker run -d -it -p 3333:3333 --name api-docker-container -v ./src:/server/src api-docker-image",
    "docker:compose": "docker-compose up -d --build",
    "docker:clear": "docker rmi api-docker-image -f && docker rm api-docker-container -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}