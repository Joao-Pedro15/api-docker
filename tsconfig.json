{
 "compilerOptions": {
  "target": "es2017",
  "module": "commonjs",
  "lib": [
   "es6"
  ],
  "allowJs": true,
  "outDir": "./dist",
  "rootDir": "./src",
  "sourceMap": false,
  "strict": true,
  "removeComments": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "baseUrl": ".",
  "typeRoots": [
   "./src/@types",
   "node_modules/@types"
  ],
  "paths": {
   "@/*": [
    "src/*"
   ]
  }
 },
 "include": [
  "src/**/*"
 ],
 "exclude": [
  "public"
 ]
}